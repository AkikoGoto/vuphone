<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	android:layout_width="fill_parent" android:layout_height="fill_parent"
 	android:orientation="vertical">
 
 	<TextView android:id="@+id/debug" 
 		android:layout_width="fill_parent" android:layout_height="wrap_content"
 		android:text="" />
 	 
 	<TextView android:id="@+id/message" 
 		android:layout_width="fill_parent" android:layout_height="wrap_content"
 		android:text="WreckWatch has detected a crash. Did an accident occur?" />
 		
 
 	<ProgressBar android:id="@+id/progress_bar" 
 		android:layout_width="fill_parent" android:layout_height="wrap_content"
 		android:progressDrawable="@android:drawable/progress_horizontal"
 		android:indeterminateOnly="false" android:progress="0"/>
 	
 	<TextView android:id="@+id/time_remaining"
 		android:layout_width="fill_parent" android:layout_height="wrap_content"
 		android:text="Time remaining: " />
 
 	<LinearLayout android:orientation="horizontal"
 		android:layout_width="fill_parent" android:layout_height="wrap_content" 
 		android:id="@+id/button_bar" android:weightSum="2">
 
	 	<Button android:id="@+id/accident_true" android:text="Yes"
	 		android:layout_width="wrap_content" android:layout_height="wrap_content"
	 		android:layout_weight="1"/>
	 
	 	<Button android:id="@+id/accident_false" android:text="No"
	 		android:layout_width="wrap_content" android:layout_height="wrap_content"
	 		android:layout_weight="1"/>
 	</LinearLayout>
 
