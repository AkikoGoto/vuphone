<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="50dp">
	<TextView android:id="@+news/title"
		android:layout_height="wrap_content" android:layout_width="240dp"
		android:textColor="@android:color/primary_text_dark"
		android:textSize="16dp"
		android:gravity="left" android:paddingLeft="10dp"
		android:layout_centerVertical="true"
		android:ellipsize="end"/>
	<TextView android:id="@+news/date"
		android:textSize="16dp" android:textColor="@android:color/secondary_text_dark"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_alignParentRight="true" android:layout_centerVertical="true"
		android:paddingRight="10dp" />
</RelativeLayout>

