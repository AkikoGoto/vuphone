<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="50dp">
	<ImageView android:id="@+schedule/teamIcon"
		android:layout_height="wrap_content" android:layout_width="60dp"
		android:gravity="left" android:paddingLeft="10dp"
		android:paddingBottom="10dp" android:paddingTop="10dp"
		android:layout_centerVertical="true" />
	<TextView android:id="@+schedule/teamName" android:textColor="@android:color/primary_text_dark"
		android:textSize="22dp" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:layout_toRightOf="@schedule/teamIcon"
		android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
		android:layout_centerVertical="true" />
	<TextView android:id="@+schedule/their_score"
		android:textSize="18dp" android:textColor="@android:color/secondary_text_dark"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_alignParentRight="true" android:layout_centerVertical="true"
		android:paddingRight="10dp" />
	<TextView android:id="@+schedule/hash" android:textSize="18dp"
		android:textColor="@android:color/secondary_text_dark"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_toLeftOf="@schedule/their_score"
		android:layout_centerVertical="true"/>
	<TextView android:id="@+schedule/our_score" android:textSize="18dp"
		android:textColor="@android:color/secondary_text_dark"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_centerVertical="true" android:layout_toLeftOf="@schedule/hash" />
	<TextView android:id="@+schedule/outcome" android:textSize="18dp"
		android:textColor="#00FF00" android:layout_height="wrap_content"
		android:layout_width="20dp" android:layout_toLeftOf="@schedule/our_score"
		android:layout_marginRight="10dp" android:layout_marginLeft="10dp"
		android:layout_centerVertical="true" />
	<TextView android:id="@+schedule/date"
		android:textSize="18dp" android:textColor="@android:color/secondary_text_dark"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_alignParentRight="true" android:layout_centerVertical="true"
		android:paddingRight="10dp" />
</RelativeLayout>

