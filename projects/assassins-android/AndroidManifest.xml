<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.vuphone.assassins.android" android:versionCode="1"
	android:versionName="1.0">

	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.INTERNET" />

	<application android:icon="@drawable/icon" android:label="@string/app_name">

		<!-- The main activity -->

		<activity android:name=".landmine.ActivityCreateLandMine"
			android:label="Assassins">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".notices.ActivityDeathNotice" android:label="Death"
			android:screenOrientation="portrait">

		</activity>
		
		<activity android:name=".notices.ActivityWarning" android:label="Warning"
			android:screenOrientation="portrait">
		</activity>
		
		<service android:name=".ServicePeriodicUpdate" />
			
	</application>
	<uses-sdk android:minSdkVersion="3" />
</manifest> 